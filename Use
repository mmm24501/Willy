		h = new HolidayPlan(id, name, dob, travellers, destination, cost);//Creates the HolidayPlan object.

		System.out.println("Please Policy Number: "); //Start of Policy creation Data
		policyNum = KEYBOARD.nextLine();

		System.out.println("Please choose the type of Policy you would like to apply for: ");//Policy Destination choice
		
		if(destination == "Europe")//Makes Standard Policy appear only if the destination is Europe. This is further validated in the next if statement.
		{
			System.out.println("1: Standard");
		}
	}
	
	public static Calendar grabDate(String dayPrompt, String monthPrompt, String yearPrompt) {
		Calendar calendar = Calendar.getInstance();
		int day, month, year;
		
		System.out.println(dayPrompt);
		day = KEYBOARD.nextInt();
		
		System.out.println(monthPrompt);
		month = KEYBOARD.nextInt();
		
		System.out.println(yearPrompt);
		year = KEYBOARD.nextInt();
		
		calendar.set(year, month, day);
		return calendar;
	}
}
